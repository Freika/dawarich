<% content_for :title, "General settings" %>

<div class="min-h-content w-full my-5">
  <h1 class="text-3xl font-bold mb-6">General settings</h1>
  <%= render 'settings/navigation' %>

  <div class="card bg-base-200 shadow-xl">
    <%= form_with url: settings_general_path, method: :patch, data: { turbo: false } do |f| %>
      <div class="card-body">
        <div class="space-y-8 animate-fade-in">
          <div>
            <h2 class="text-2xl font-bold mb-4 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-clock mr-2 text-primary">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              Timezone
            </h2>
            <div class="bg-base-100 p-5 rounded-lg shadow-sm space-y-4">
              <div class="form-control w-full max-w-md">
                <%= f.label :timezone, class: 'label' do %>
                  <span class="label-text font-medium">Your Timezone</span>
                <% end %>
                <%= f.select :timezone,
                  options_for_select(@timezones, @current_timezone),
                  {},
                  class: "select select-bordered w-full" %>
                <span class="label-text-alt mt-1">
                  Select your timezone for displaying dates and times throughout the app.
                </span>
              </div>
              <div class="bg-base-200 p-4 rounded-lg mt-4">
                <p class="text-sm">
                  <span class="font-medium">Current timezone:</span>
                  <span class="badge badge-primary ml-2"><%= @current_timezone %></span>
                </p>
                <p class="text-sm mt-2">
                  <span class="font-medium">Current time:</span>
                  <span class="ml-2"><%= Time.current.in_time_zone(@current_timezone).strftime('%B %d, %Y %H:%M:%S') %></span>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="card-actions justify-end mt-6">
          <%= f.submit 'Save changes', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
